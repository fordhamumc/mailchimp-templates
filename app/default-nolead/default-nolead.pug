extends ../_layouts/default/default
include ../_components/buttons/btn
include ../_components/break/break
include ../_components/columns/columns
include ../_components/preheader/preheader
include ../_components/articlelist/articlelist
include ../_components/sectionheader/sectionheader
include ../_components/masthead/masthead
include ../_components/footer/footer
include ../_components/eventlist/eventlist
include ../_components/social/social
include ../_components/tagline/tagline
include ../_components/fullad/fullad

block style-template
  <!-- build:css inline styles/style.css -->
  link(rel='stylesheet', href='styles/default-nolead.css', data-premailer='ignore')
  link(rel='stylesheet', href='styles/default-nolead-editable.css', data-premailer='ignore')
  <!-- /build -->
  link(rel='stylesheet', href='styles/default-nolead-inlined.css')

block body
  center.wrapper.cb-lead
    <!--[if (gte mso 9)|(IE)]><table width="100%" align="center"><tr><td><![endif]-->
    .webkit
      <!--[if (gte mso 9)|(IE)]><table width="730" align="center"><tr><td><![endif]-->
      table.outer.outer-alt
        tr(mc:repeatable="preheader", mc:variant="Visible Preheader")
          +preheader
        tr(mc:repeatable="preheader", mc:variant="Hidden Preheader")
          +preheader(true)
        each masthead in mastheads
          tr(mc:repeatable="masthead", mc:variant=masthead.variant)
            +masthead(masthead)
        tr.intro(mc:hideable)
          +column("column", {size: 1, title: false, aspect: 0, hidecontent:false, hidebreak:false})
        tr
          td
            .section-top &nbsp;
      <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->
    <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->

  center.wrapper.cb-default
    <!--[if (gte mso 9)|(IE)]><table width="100%" align="center"><tr><td><![endif]-->
    .webkit
      <!--[if (gte mso 9)|(IE)]><table width="730" align="center"><tr><td><![endif]-->
      table.outer
        tr(mc:repeatable="body", mc:variant="Content")
          +column("column", {size: 1, title: false, aspect: 0})
        tr(mc:repeatable="body", mc:variant="Image")
          +column("column", {size: 1, title: false, body: false})
        tr(mc:repeatable="body", mc:variant="Call to Action")
          td.inner.contents(style="padding-top: 0")
            +btn("body")
        tr(mc:repeatable="body", mc:variant="Two Columns")
          td.cont.cont-2
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {fullimage: true, textlink: true})
            +column("column-2", {fullimage: true, textlink: true})
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
        tr(mc:repeatable="body", mc:variant="Three Columns")
          td.cont.cont-3.cntr-sm
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {size: 3, aspect: 1.5, title: false}) A Short Title
            +column("column-2", {size: 3, aspect: 1.5, title: false}) A Short Title
            +column("column-3", {size: 3, aspect: 1.5, title: false}) A Short Title
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
        tr(mc:repeatable="body", mc:variant="Sixty-forty Columns (left image)")
          td.cont.cont-64.body-64
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {size: 4, aspect: 1.5, fullimage: true, title: false, body: false, caption: true})
            +column("column-2", {size: 6, aspect: false, heading: "h3", break: false})
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
            .break(mc:hideable) &nbsp;
        tr(mc:repeatable="body", mc:variant="Sixty-forty Columns (right image)")
          td.cont.cont-64.body-64(dir="rtl")
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {size: 4, aspect: 1.5, fullimage: true, title: false, body: false, caption: true})
            +column("column-2", {size: 6, aspect: false, heading: "h3", break: false})
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
            .break(mc:hideable) &nbsp;
        tr(mc:repeatable="body", mc:variant="Two-thirds Columns (left image)")
          td.cont.cont-3.body-3.col-img-full
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {size: 3, aspect: 1.5, fullimage: true, title: false, body: false})
            +column("column-2", {size: 23, aspect: false, heading: "h3", break: false})
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
            .break(mc:hideable) &nbsp;
        tr(mc:repeatable="body", mc:variant="Two-thirds Columns (right image)")
          td.cont.cont-3.body-3.col-img-full(dir="rtl")
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {size: 3, aspect: 1.5, fullimage: true, title: false, body: false})
            +column("column-2", {size: 23, aspect: false, heading: "h3", break: false})
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
            .break(mc:hideable) &nbsp;
        tr(mc:repeatable="body", mc:variant="Icons")
          td.cont.cont-icon
            <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
            +column("column", {size: 15, aspect: 1.5, title: false, body: false})
            +column("column-2", {size: 45, aspect: false, heading: "h3", break: false})
            <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
            .break(mc:hideable) &nbsp;
        tr(mc:repeatable="body", mc:variant="Article List")
          +article-container
            +article-item("body")
            +article-more("body")
        tr(mc:repeatable="body", mc:variant="Event List")
          td.cont.event-list
            +eventlist
            +eventmore
        tr.cntr-sm(mc:repeatable="body", mc:variant="Section Header")
          +sectionheader("column")
        tr(mc:repeatable="body", mc:variant="Section Break")
          +breaksection(bgcolor)
        tr(mc:repeatable="body", mc:variant="Break")
          +break
        tr(mc:repeatable="body", mc:variant="Break (dashed line)")
          +break({line: "dashed"})
        tr(mc:repeatable="body", mc:variant="Break (small solid line)")
          +break({line: "small"})
        tr(mc:repeatable="body", mc:variant="Ad with text")
          +breaksection(bgcolor)
            table(width="100%")
              tr
                +fullad
        tr(mc:repeatable="body", mc:variant="Ad full-width image")
          +breaksection(bgcolor)
            table(width="100%")
              tr
                +fullad(true)
        tr(mc:repeatable="body", mc:variant="Ad 2-column")
          +breaksection(bgcolor)
            table(width="100%")
              tr
                td.cont.cont-2
                  <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
                  +column("column", {fullimage: true, textlink: true, title: false}) A Short Title
                  +column("column-2", {fullimage: true, textlink: true, title: false}) A Short Title
                  <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
        tr(mc:repeatable="body", mc:variant="Ad 3-column")
          +breaksection(bgcolor)
            table(width="100%")
              tr
                td.cont.cont-3.cntr-sm
                  <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><![endif]-->
                  +column("column", {size: 3, aspect: 1.5, title: false}) A Short Title
                  +column("column-2", {size: 3, aspect: 1.5, title: false}) A Short Title
                  +column("column-3", {size: 3, aspect: 1.5, title: false}) A Short Title
                  <!--[if (gte mso 9)|(IE)]></tr></table><![endif]-->
        tr
          td &nbsp;
      <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->
    <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->
  center.wrapper
    <!--[if (gte mso 9)|(IE)]><table width="100%" align="center"><tr><td><![endif]-->
    .webkit
      <!--[if (gte mso 9)|(IE)]><table width="730" align="center"><tr><td><![endif]-->
      table.outer
        tr
          +break
        tr(mc:repeatable="footer", mc:variant="Social Networks (Alumni)")
          +social(socialalumni)
        tr(mc:repeatable="footer", mc:variant="Social Networks (University)")
          +social(socialuniversity)
        tr(mc:repeatable="footer", mc:variant="Social Networks (Athletics)")
          +social(socialathletics)
        tr(mc:repeatable="footer", mc:variant="Ad (with text)")
          +fullad
        tr(mc:repeatable="footer", mc:variant="Ad (full-width image)")
          +fullad(true)
        tr(mc:repeatable="tagline", mc:variant="Tagline Default")
          +tagline
        tr(mc:repeatable="tagline", mc:variant="Tagline 175")
          +tagline("175")
        tr(mc:repeatable="tagline", mc:variant="Tagline 175 Seal")
          +tagline("seal")
        tr(mc:repeatable="tagline", mc:variant="Tagline Giving Day")
          +tagline("giveday")
        tr
          +footer
      <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->
    <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->