- each masthead in mastheads
  table.outer.header(mc:repeatable="header-branding", mc:variant=masthead.alt)
    tr
      td.one-column.masthead.masthead-single
        table(width='100%')
          tr
            td.inner.contents
                a(href=masthead.url, target='_blank')
                  img.masthead--brand(src='img/fordham-white.png', width='165', alt='Fordham University')
                  if masthead.name
                    | <br />
                    img.masthead--brand(src='img/header-line.png', width='165', alt='')
                    | <br />
                    img(class='masthead--#{masthead.name}', src='img/#{masthead.name}.png', width=masthead.size, alt=masthead.alt)
                    if masthead.secondary == true
                      img(class='masthead--#{masthead.name}2', src='img/#{masthead.name}2.png', width=masthead.size2, alt=masthead.alt2)
