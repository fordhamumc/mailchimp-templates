mixin break(options)
  - var settings = Object.assign({line: false, bg: false}, options)
  td.break(style=`${(settings.bg) ? 'background-color:' + settings.bg : ''}`)
    if settings.line
      div(class=`break-${settings.line}`) &nbsp;
    else
      | &nbsp;

mixin breaksection(bg)
  td(style=`${(bg) ? 'background-color:' + bg : ''}`)
    .section-bottom &nbsp;
    table(width="100%")
      tr.break-reduce
        +break({bg: bg})
    block
    table(width="100%")
      tr.break-reduce
        +break({bg: bg})
    .section-top &nbsp;